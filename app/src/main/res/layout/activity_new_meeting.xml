<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newMeeting.NewMeetingActivity">

   <TextView
       android:id="@+id/tvw_meetting_title_add"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/my_event_title"
       tools:text="Titre de mon évènement"
       android:textSize="20sp"
       android:textStyle="bold"
       app:layout_constraintTop_toTopOf="parent"
       android:padding="5dp"/>

    <EditText
        android:id="@+id/edt_meeting_title_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mon super évènement"
        app:layout_constraintTop_toBottomOf="@+id/tvw_meetting_title_add"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/tvw_meeting_desc_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description de mon évènement"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/edt_meeting_title_add"
        android:padding="5dp"/>

    <EditText
        android:id="@+id/edt_meeting_desc_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ma super description"
        app:layout_constraintTop_toBottomOf="@+id/tvw_meeting_desc_add"
        android:padding="5dp"/>


    <Button
        android:id="@+id/btn_create_meeting"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Crée l'évènement"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@color/colorPrimaryWhiter"
        android:textColor="@color/textTheme"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>